<div class="message">
  <div class="top-message">
    <div class="name">
    <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name%>
    </div>
    <div class="day-time">
    <!-- 投稿した時刻を出力する -->
      <%= l message.created_at%>
    </div>
  </div>
  <div class="bottom-message">
    <div class="comment">
    <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content%>
    </div>
  </div>
</div>